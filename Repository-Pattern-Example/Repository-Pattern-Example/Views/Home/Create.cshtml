@model Repository_Pattern_Example.Models.Student

@{
    ViewBag.Title = "Create";
}

<div class="">
    <div class="clearfix"></div>
    <div class="row">
        <div class="clearfix"></div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Yeni Öğrenci Ekleme Sayfası</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                         
                            <div class="form-group">
                                <div class="col-md-5">
                                    <label class="col-md-5">Ad-Soyad Giriniz: </label><br />
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @required = "required", @maxlength = "20" } })

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <input type="submit" value="Kaydet" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>